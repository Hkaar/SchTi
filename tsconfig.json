{
    "compilerOptions": {
        "target": "ES2020",
        "allowJs": true,
        "checkJs": true,
        "strict": true,
        "outDir": "./dist",
        "moduleResolution": "NodeNext",
        "esModuleInterop": true,
        "module": "NodeNext",
        "types": ["vite/client"]
    },

    "include": [
        "./resources/types/**/*",
        "./resources/js/**/*"
    ],

    "exclude": [
        "./dist/*",
        "./public/build/**/*"
    ],
}